doctype html
html
    head
        //- transformando head em block pra poder adicionar script JS exclusivo de outros blocos (ver tour.pug)
        block head
            meta(charset='UTF-8')
            meta(name='viewport' content='width=device-width, initial-scale=1.0')
            link(href='https://fonts.googleapis.com/css?family=Lato:300,300i,700' rel='stylesheet')
            link(rel='stylesheet' href='/css/style.css')
            link(rel='shortcut icon' type='image/png' href='/img/favicon.png')
            title Natours | #{title}

    body
        include _header

        block content
            h1 This is a placeholder for content
        
        include _footer

        script(src='/js/bundle.js')
        
        